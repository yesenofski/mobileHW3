<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobileHW3.Page1"
             Title="Squid fixer "
             >
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" >
            <Grid >
            <Entry x:Name="Entry"
                   Text="enter your name here..."
                   TextColor="Aqua"
                   />
                </Grid> 
            <Button Text="Click to De-Handsome" Clicked="Button_Clicked" />
            <Image Source="https://www.clipartmax.com/png/middle/68-683917_pics-of-squidward-best-the-mysterious-mr-enter-wiki-dank-memes.png"
                   RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                   RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}"
                />
            
            <!--<Grid RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width} "
                  RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}"
                  />-->

        </StackLayout>
    </ContentPage.Content>
</ContentPage>